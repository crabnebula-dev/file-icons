{
  "name": "@crabnebula/file-icons",
  "version": "0.1.0",
  "description": "File Icons for IDEs",
  "license": "MIT OR Apache-2.0",
  "author": "Jonas Kruckenberg <jonas@crabnebula.dev>",
  "keywords": [
    "icons",
    "file-icons"
  ],
  "repository": "https://github.com/crabnebula-dev/file-icons",
  "bugs": {
    "url": "https://github.com/crabnebula-dev/file-icons/issues"
  },
  "type": "module",
  "main": "dist/lib.js",
  "types": "dist/lib.d.ts",
  "files": [
    "dist",
    "icons"
  ],
  "scripts": {
    "gen-lut": "esbuild scripts/gen-lut.ts --bundle --outdir=scripts --format=esm --platform=node && node scripts/gen-lut.js",
    "build:rust:debug": "cargo build --target wasm32-unknown-unknown --no-default-features --features _web_build",
    "build:rust": "cargo build --release --target wasm32-unknown-unknown --no-default-features --features _web_build -Z build-std=core,panic_abort -Z build-std-features=panic_immediate_abort",
    "build:dts": "tsc --declaration --emitDeclarationOnly --declarationDir dist src/lib.ts src/wasm.d.ts",
    "build:js": "esbuild src/lib.ts --bundle --format=esm --outdir=dist --loader:.wasm=copy --alias:file_icons.wasm=./target/wasm32-unknown-unknown/release/file_icons.wasm",
    "build:js:debug": "esbuild src/lib.ts --bundle --format=esm --outdir=dist --loader:.wasm=copy --alias:file_icons.wasm=./target/wasm32-unknown-unknown/debug/file_icons.wasm",
    "build": "rm -rf dist && pnpm build:rust && pnpm build:dts && pnpm build:js",
    "build:debug": "rm -rf dist && pnpm build:rust:debug && pnpm build:dts && pnpm build:js:debug",
    "test:e2e": "pnpm vitest run tests"
  },
  "devDependencies": {
    "@vitest/browser": "^0.34.6",
    "esbuild": "^0.19.5",
    "typescript": "^5.2.2",
    "vite-plugin-top-level-await": "^1.3.1",
    "vite-plugin-wasm": "^3.2.2",
    "vitest": "^0.34.6",
    "webdriverio": "^8.21.0"
  }
}
